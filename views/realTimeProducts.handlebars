<h1>Productos en tiempo real</h1>

<section class="forms-grid">
  <form id="formCreate" autocomplete="off">
    <h3>Crear producto (WebSocket)</h3>

    <div class="form-row">
      <input name="title" placeholder="Título" required />
      <input name="code" placeholder="Código único" required />
    </div>

    <div class="form-row">
      <input name="price" type="number" step="0.01" min="0" placeholder="Precio" required />
      <input name="stock" type="number" min="0" placeholder="Stock" value="0" />
    </div>

    <input name="thumbnail" placeholder="Thumbnail (URL)" />
    <textarea name="description" placeholder="Descripción" rows="3" required></textarea>

    <button type="submit">Crear</button>
    <small id="msgCreate" class="muted" aria-live="polite"></small>
  </form>

  <form id="formDelete">
    <h3>Eliminar producto por ID (WebSocket)</h3>
    <div class="form-row">
      <input name="id" type="number" min="1" placeholder="ID" required />
      <button type="submit">Eliminar</button>
    </div>
    <small id="msgDelete" class="muted" aria-live="polite"></small>
  </form>
</section>

<h2>Lista</h2>
<ul id="realtimeList" class="product-list" aria-live="polite"></ul>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtime.js"></script>
